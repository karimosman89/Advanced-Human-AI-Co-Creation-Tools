# Advanced Human-AI Co-Creation Tools
# Environment Variables Template

# Application Settings
APP_NAME="Advanced Human-AI Co-Creation Tools"
APP_VERSION="1.0.0"
ENVIRONMENT="development"  # development, staging, production

# API Keys (Optional - for production use with real AI services)
OPENAI_API_KEY="your-openai-api-key-here"
ANTHROPIC_API_KEY="your-anthropic-api-key-here"
COHERE_API_KEY="your-cohere-api-key-here"

# Database Configuration (Optional)
DATABASE_URL="postgresql://user:password@localhost:5432/cocreation"

# Logging
LOG_LEVEL="INFO"  # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FILE="logs/app.log"

# Workspace Configuration
WORKSPACE_DIR="./workspace"
DATA_DIR="./data"

# Model Configuration
DEFAULT_MODEL="gpt-3.5-turbo"
EMBEDDING_MODEL="sentence-transformers/all-MiniLM-L6-v2"

# Performance Settings
MAX_WORKERS=4
CACHE_ENABLED=true
CACHE_TTL=3600

# Security
SECRET_KEY="your-secret-key-here"
ALLOWED_HOSTS="localhost,127.0.0.1"

# Feature Flags
ENABLE_RAG=true
ENABLE_CREATIVE_STUDIO=true
ENABLE_CODE_REVIEWER=true

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000
